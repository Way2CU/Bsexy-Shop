<document>
	<!-- Promoted category-->
	<section>
		<!-- Category title -->
		<cms:module
			name="shop"
			action="show_category"
			text_id="isset($template['promoted']) ? $template['promoted'] : promoted_regular)"
			limit="8"
			template="parts/category_title.xml"
			>
			<param name="no_icon" value=""/>
		</cms:module>

		<cms:mobile>
			<cms:template file="parts/display_controls.xml"/>
		</cms:mobile>

		<!-- Promoted items -->
		<div class="category_items">
			<cms:module
			name="shop"
			action="show_item_list"
			category="isset($template['promoted']) ? $template['promoted'] : promoted_regular)"
			order_by="priority"
			limit="8"
			template="parts/promoted_items.xml"
			/>
		</div>

		<!-- Latest items -->
		<div class="latest">
			<h3><cms:text constant="title_latest"/></h3>
			<cms:module
				name="shop"
				action="show_item_list"
				category="isset($template['promoted']) ? $template['promoted'] : promoted_regular)"
				order_by="id"
				limit="6"
				template="parts/category_latest_items.xml"
				/>
		</div>

		<!-- Banners-->
		<div class="commercial">
			<cms:module
				name="links"
				action="show_link_list"
				group="isset($template['promoted']) ? $template['promoted'] : promoted_regular)"
				limit="2"
				template="parts/commercial.xml"
				/>
		</div>
	</section>
</document>
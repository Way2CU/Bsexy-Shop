<document>
	<footer>
		<div class="content">
			<!-- Link to top -->
			<a href="#" id="top" class="arrow_top">
				<cms:svg file="site-sprite.svg" symbol="arrow" />
			</a>

			<div class="links">
				<cms:module
					name="links"
					action="show_link_list"
					group="footer_links_seo"
					template="parts/show_links_footer.xml"
					/>
			</div>

			<cms:desktop>
				<img
					class="logo"
					src="_BASEURL.'/site/images/logo-vector.svg'"
					alt="bsexy-logo"
					cms:eval="src"
					/>

				<cms:module
					name="links"
					action="show_link_list"
					group="footer_links"
					template="parts/footer_links.xml"
					/>
				<br/>

				<!-- phone link -->
				<cms:module
					name="links"
					action="show"
					text_id="phone"
					template="parts/link.xml"
					/>

				<img
					class="note"
					src="_BASEURL.'/site/images/footer-note-vector.svg'"
					alt="message"
					cms:eval="src"
					/>
			</cms:desktop>

			<cms:mobile>
				<!-- phone link -->
				<cms:module
					name="links"
					action="show"
					text_id="phone"
					template="parts/link.xml"
					/>

				<img
					class="note"
					src="_BASEURL.'/site/images/footer-note-vector.svg'"
					alt="message"
					cms:eval="src"
					/>

				<cms:module
					name="links"
					action="show_link_list"
					group="footer_links"
					template="parts/footer_links.xml"
					/>
				<br/>

				<img
					class="logo"
					src="_BASEURL.'/site/images/logo-vector.svg'"
					alt="bsexy-logo"
					cms:eval="src"
					/>
			</cms:mobile>
		</div>
	</footer>
</document>
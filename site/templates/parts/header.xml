<document>
  <!-- sprite svg -->
  <cms:svg file="site-sprite.svg"/>
  <!-- Desktop version header -->
  <cms:desktop>
    <header>
      <div class="main">
        <!-- phone link -->
        <cms:module
          name="links"
          action="show"
          text_id="phone"
          template="parts/link.xml"
          />
        <!-- logo -->
        <a 
          href="URL::make()"
          class="logo"
          cms:eval="href"
          >
          <img src="_BASEURL.'/site/images/logo-vector.svg'" alt="bsexy-logo" cms:eval="src"/>
        </a>
        <!-- Links to services outside the site -->
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="shop"/>
          <cms:text constant="sex_store"/>
        </a>
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="calls"/>
          <cms:text constant="erotic_calls"/>
        </a>
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="rooms"/>
          <cms:text constant="rooms_for_rent"/>
        </a>
      </div>
      <!-- Services categories menu -->
      <nav id="categories">
        <cms:module
            name="shop"
            action="show_category_list"
            parent="services"
            template="parts/services_menu_item.xml"
            />
      </nav>

      <div id="options">
        <!-- Area combobox -->
        <label class="area">
          <span><cms:text constant="label_areas"/></span>
          <select name="areas">
            <cms:module
              name="shop"
              action="show_category_list"
              parent="areas"
              template="parts/areas_option_group_item.xml"
              />
          </select>
        </label>

        <form action="">
          <label>
            <span><cms:text constant="label_search"/></span>
            <input type="search"/>
          </label>

          <button class="action" type="submit">
              <cms:svg file="site-sprite.svg" symbol="search"/>
          </button>
        </form>

        <!-- display options -->
        <cms:if condition="$action != 'view'">
          <div class="display">
            <span><cms:text constant="label_display_options"/></span>
            <a data-id="list" href="javascript:void()">
              <cms:text constant="label_list"/>
              <cms:svg file="site-sprite.svg" symbol="view"/>
            </a>
            <a class="active" data-id="gallery" href="javascript:void()">
              <cms:text constant="label_gallery"/>
              <cms:svg file="site-sprite.svg" symbol="gallery"/>
            </a>
          </div>
        </cms:if>
      </div>
    </header>
  </cms:desktop>

  <!-- Mobile version header -->
  <cms:mobile>
    <header>
      <div class="mobile_title">
        <a href="javascript:void(0)" class="menu">
          <cms:svg file="site-sprite.svg" symbol="menu"/>
        </a>
        <!-- logo -->
        <a 
          href="URL::make()"
          class="logo"
          cms:eval="href"
          >
          <img src="_BASEURL.'/site/images/logo-vector.svg'" alt="bsexy-logo" cms:eval="src"/>
        </a>
      </div>
      <nav class="mobile_menu">
        <!-- phone link -->
        <cms:module
          name="links"
          action="show"
          text_id="phone"
          template="parts/link.xml"
          />
        <!-- Area combobox -->
        <label class="area">
          <span><cms:text constant="label_areas"/></span>
          <select name="areas">
            <cms:module
              name="shop"
              action="show_category_list"
              parent="areas"
              template="parts/areas_option_group_item.xml"
              />
          </select>
        </label>

        <form action="">
          <label>
            <span><cms:text constant="label_search"/></span>
            <input type="search"/>
          </label>

          <button class="action" type="submit">
              <cms:svg file="site-sprite.svg" symbol="search"/>
          </button>
        </form>
        <!-- Services links -->
        <div class="services">
          <cms:module
              name="shop"
              action="show_category_list"
              parent="services"
              template="parts/services_menu_item.xml"
              />
         </div>

        <!-- Links to services outside the site -->
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="shop"/>
          <cms:text constant="sex_store"/>
        </a>
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="calls"/>
          <cms:text constant="erotic_calls"/>
        </a>
        <a href="#" class="service">
          <cms:svg file="site-sprite.svg" symbol="rooms"/>
          <cms:text constant="rooms_for_rent"/>
        </a>
      </nav>
    </header>
  </cms:mobile>
</document>
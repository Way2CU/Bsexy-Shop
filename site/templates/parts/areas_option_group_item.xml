<document>
  <optgroup
    label="$params['title'][$language]"
    selected="$params['text_id'] == 'central' ? selected : false"
    cms:optional="selected"
    cms:eval="label"
    >
    <cms:var param="name" multilanguage="yes"/>
    <cms:module
        name="shop"
        action="show_category_list"
        parent_id="$params['id']"
        template="parts/services_option_item.xml"
        cms:eval="parent_id"
        />
  </optgroup>
</document>
<document>
  <div class="item" data-priority="$params['priority']" cms:eval="data-priority">
    <a
      class="image"
      href="url_Make('view', 'services', array('service', isset($template['promoted']) ? $template['promoted'] : $_REQUEST['service']), array('id', $params['id']))"
      cms:eval="href"
      >
      <img 
        src="gallery::getGroupThumbnailById($params['gallery'], null, _DESKTOP_VERSION ? 250 : 150,Thumbnail::CONSTRAIN_HEIGHT)"
        alt="$params['name'][$language]"
        cms:eval="src,alt"
        />
    </a>
    <div>
        <h4><cms:var param="name" multilanguage="yes"/></h4>
        <cms:markdown param="description" multilanguage="yes"/>

        <!-- Show phone numbers -->
        <cms:module
          name="shop"
          action="show_property"
          item="$params['id']"
          text_id="phone1"
          template="parts/phone.xml"
          cms:eval="item"
          />
    </div>
  </div>
</document>
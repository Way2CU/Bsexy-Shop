<document>
	<!-- Item title -->
	<h1><cms:var param="name" multilanguage="yes"/></h1>

	<cms:desktop>
		<!-- Information -->
		<div class="information">
			<cms:markdown param="description" multilanguage="yes"/>

			<!-- Show phone numbers -->
			<cms:module
				name="shop"
				action="show_property"
				item="$params['id']"
				text_id="phone1"
				template="parts/phone.xml"
				cms:eval="item"
				/>

			<cms:module
				name="shop"
				action="show_property"
				item="$params['id']"
				text_id="phone2"
				template="parts/phone.xml"
				cms:eval="item"
				/>
		</div>

		<!-- Item images -->
		<div class="item_gallery">
			<!-- Big image container-->
			<div class="main_image">
				<cms:module
					name="gallery"
					action="show_image_list"
					group_id="$params['gallery']"
					limit="4"
					template="parts/item_images.xml"
					cms:eval="group_id"
					>
					<param name="big_image" value=""/>
				</cms:module>
			</div>

			<!-- Thumbnail images -->
			<div class="thumbnails">
				<cms:module
					name="gallery"
					action="show_image_list"
					group_id="$params['gallery']"
					limit="4"
					template="parts/item_images.xml"
					cms:eval="group_id"
					>
					<param name="thumbnail_image" value=""/>
				</cms:module>
			</div>
		</div>
	</cms:desktop>

	<cms:mobile>
		<!-- Item images -->
		<div class="item_gallery">
			<!-- Big image container-->
			<div class="main_image"
				>
				<cms:module
					name="gallery"
					action="show_image_list"
					group_id="$params['gallery']"
					limit="4"
					template="parts/item_images.xml"
					cms:eval="group_id"
					>
					<param name="big_image" value=""/>
				</cms:module>
			</div>

			<!-- Thumbnail images -->
			<div class="thumbnails">
				<cms:module
					name="gallery"
					action="show_image_list"
					group_id="$params['gallery']"
					limit="4"
					template="parts/item_images.xml"
					cms:eval="group_id"
					>
					<param name="thumbnail_image" value=""/>
				</cms:module>
			</div>

			<!-- Information -->
			<div class="information">
				<cms:markdown param="description" multilanguage="yes"/>

				<!-- Show phone numbers -->
				<cms:module
					name="shop"
					action="show_property"
					item="$params['id']"
					text_id="phone1"
					template="parts/phone.xml"
					cms:eval="item"
					/>

				<cms:module
					name="shop"
					action="show_property"
					item="$params['id']"
					text_id="phone2"
					template="parts/phone.xml"
					cms:eval="item"
					/>
			</div>
		</div>
	</cms:mobile>
</document>

<document>
  <cms:if condition="!isset($_REQUEST['service'])">
    <option 
      value="URL::make(array( 'area' => $params['text_id']))"
      selected="isset($_REQUEST['area']) and $_REQUEST['area'] == $params['text_id'] ? 'selected' : false"
      cms:optional="selected"
      cms:eval="value"
      >
      <cms:var param="title" multilanguage="yes"/>
    </option>
  </cms:if>

  <cms:if condition="isset($_REQUEST['service'])">
    <option 
      value="URL::make(array('service' => $_REQUEST['service'], 'area' => $params['text_id']))"
      selected="$_REQUEST['area'] == $params['text_id'] ? 'selected' : false"
      cms:optional="selected"
      cms:eval="value"
      >
      <cms:var param="title" multilanguage="yes"/>
    </option>
  </cms:if>
</document>
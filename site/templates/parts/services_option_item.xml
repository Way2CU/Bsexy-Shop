    <option 
      value="URL::make(array( 'area' => $params['text_id']))"
      cms:eval="value"
      >
      <cms:var param="title" multilanguage="yes"/>
    </option>
  </cms:if>

  <cms:if condition="isset($_REQUEST['service'])">

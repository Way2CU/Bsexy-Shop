<document>
	<a
		class="category"
		href="URL::make(array('service' => $params['text_id'], 'area' => $params['text_id'].'-tel-aviv'))"
		cms:eval="href"
		>
		<img
			src="gallery::getThumbnailById($params['image'], null, 300,Thumbnail::CONSTRAIN_WIDTH)"
			alt="$params['title'][$language]"
			cms:eval="src,alt"
			/>
		<h3 class="title">
			<cms:var param="title" multilanguage="yes"/>
		</h3>
	</a>
</document>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:script src="_BASEURL.'/site/scripts/banner_system.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/gtmhead.txt"/>
		</head>

		<body>
			<cms:raw file="parts/gtmbody.txt"/>

			<cms:template file="parts/header.xml"/>

			<!-- Desktop version promoted categories -->
			<cms:desktop>
				<cms:module
					name="shop"
					action="show_category"
					text_id="escort"
					template="parts/category_preview.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="apartments"
					template="parts/category_preview.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="massage"
					template="parts/category_preview.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="private"
					template="parts/category_preview.xml"
					/>

				<cms:module
					name="shop"
					action="show_category"
					text_id="vip"
					template="parts/category_preview.xml"
					/>
			</cms:desktop>

			<!-- Mobile version home page -->
			<cms:mobile>
				<section>
					<cms:module
						name="shop"
						action="show_category_list"
						parent="services"
						order_by="order"
						template="parts/services_menu_images.xml"
						/>
				</section>

				<!-- Banners-->
				<div class="commercial">
					<cms:module
						name="links"
						action="show_link_list"
						group="mobile_home_page_banners"
						template="parts/commercial.xml"
						/>
				</div>
			</cms:mobile>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
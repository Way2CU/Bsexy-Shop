<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>
		
		<body>
			<!-- Top part of the site -->
			<cms:if condition="isset($_SESSION['intro_displayed'])">
				<cms:template file="parts/header.xml"/>
				<!-- Promoted categories section-->
				<section>
					<!-- Show category title -->
					<cms:module
						name="shop"
						action="show_category"
						text_id="promoted1"
						template="parts/page_title.xml"
						>
						<param name="no_icon" value=""/>
					</cms:module>

					<cms:mobile>
						<div class="display">
						  <span><cms:text constant="label_display_options"/></span>
						  <a data-id="list" href="javascript:void()">
						    <cms:text constant="label_list"/>
						    <cms:svg file="site-sprite.svg" symbol="view"/>
						  </a>
						  <a class="active" data-id="gallery" href="javascript:void()">
						    <cms:text constant="label_gallery"/>
						    <cms:svg file="site-sprite.svg" symbol="gallery"/>
						  </a>
						</div>
					</cms:mobile>

					<!-- Show promoted items -->
					<div class="category_items">
						<cms:module
							name="shop"
							action="show_item_list"
							category="promoted1"
							order_by="priority"
							template="parts/promoted_items.xml"
							/>
					</div>
					<!-- Show latest items -->
					<div class="latest">
						<h3><cms:text constant="title_latest"/></h3>
						<cms:module
							name="shop"
							action="show_item_list"
							category="promoted1"
							order_by="id"
							limit="6"
							template="parts/category_latest_items.xml"
							/>
					</div>
					<!-- Show banners-->
					<div class="commercial">
						<cms:module
							name="links"
							action="show_link_list"
							group="banners"
							limit="2"
							template="parts/commercial.xml"
							/>
					</div>
				</section>
			</cms:if>
			
			<!-- condition for showing intro page on first time visiting the site -->
			<cms:if condition="!isset($_SESSION['intro_displayed'])">
				<cms:template file="parts/intro.xml"/>
				<cms:session name="intro_displayed" value="1"/>
			</cms:if>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>

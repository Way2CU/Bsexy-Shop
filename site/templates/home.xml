<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Content after consent -->
			<cms:if condition="isset($_SESSION['intro_displayed'])">
				<!-- Top part of the site -->
				<cms:template file="parts/header.xml"/>

				<!-- Promoted categories -->
				<cms:template file="parts/category_promoted.xml">
					<param name="promoted" value="promoted_gold"/>
				</cms:template>
			</cms:if>

			<!-- User consent -->
			<cms:if condition="!isset($_SESSION['intro_displayed'])">
				<cms:template file="parts/intro.xml"/>
				<cms:session name="intro_displayed" value="1"/>
			</cms:if>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>

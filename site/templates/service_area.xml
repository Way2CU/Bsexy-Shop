<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['service']"
					template="parts/page_title.xml"
					cms:eval="text_id"
					/>
				<cms:raw text=" - "/>
				<cms:text constant="site_title_all"/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['area']"
					template="parts/page_title.xml"
					cms:eval="text_id"
					/>
				<cms:raw text=" "/>
				<cms:text constant="site_title_end"/>
			</title>
			<cms:script src="_BASEURL.'/site/scripts/banner_system.js'" cms:eval="src"/>
			<cms:module name="head_tag" action="print_tag"/>
			<cms:raw file="parts/gtmhead.txt"/>
		</head>

		<body>
			<cms:raw file="parts/gtmbody.txt"/>
			<!-- Top part of the site -->
			<cms:template file="parts/header.xml"/>

			<section class="category_areas">
				<!-- Show area menu -->
				<cms:template file="parts/area_menu.xml"/>

				<!-- Category title -->
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['area']"
					template="parts/category.xml"
					cms:eval="text_id"
					>
					<param name="icon" value=""/>
				</cms:module>

				<!-- Show display controls options on mobile version -->
				<cms:mobile>
					<cms:template file="parts/display_controls.xml"/>
				</cms:mobile>

				<!-- Category items -->
				<div class="category_items">
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['area']"
						random="1"
						priority="25"
						limit="20"
						template="parts/category_items.xml"
						cms:eval="category"
						/>
					<br/>
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['area']"
						random="1"
						priority="15"
						limit="20"
						template="parts/category_items.xml"
						cms:eval="category"
						/>
					<br/>
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['area']"
						random="1"
						priority="5"
						template="parts/category_items.xml"
						cms:eval="category"
						/>

					<cms:module
						name="articles"
						action="show"
						text_id="$_REQUEST['area']"
						template="stock/article_generic.xml"
						cms:eval="text_id"
						>
						<param name="title" value=""/>
					</cms:module>
				</div>

				<!-- Category page banners -->
				<div class="commercial">
					<cms:module
						name="links"
						action="show_link_list"
						group="$_REQUEST['area']"
						random="1"
						template="parts/commercial.xml"
						cms:eval="group"
						/>
				</div>
			</section>

			<section class="footer_commercial">
				<cms:module
					name="links"
					action="show_group"
					text_id="footer_banners"
					template="parts/links_group_title.xml"
					/>

				<cms:module
					name="links"
					action="show_link_list"
					group="footer_banners"
					limit="5"
					random="1"
					template="parts/footer_commercial.xml"
					/>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>

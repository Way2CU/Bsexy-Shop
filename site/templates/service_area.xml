<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['area']"
					template="parts/page_title.xml"
					cms:eval="text_id"
					/>
			</title>
			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_category"
				text_id="$_REQUEST['area']"
				template="parts/page_description.xml"
				cms:eval="text_id"
				/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Top part of the site -->
			<cms:template file="parts/header.xml"/>

			<section class="category">
				<!-- Category title -->
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['area']"
					template="parts/category_title.xml"
					cms:eval="text_id"
					>
					<param name="no_icon" value=""/>
				</cms:module>

				<!-- Category description -->
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['area']"
					template="parts/category_description.xml"
					cms:eval="text_id"
					/>

				<!-- Show display controls options on mobile version -->
				<cms:mobile>
					<cms:template file="parts/display_controls.xml"/>
				</cms:mobile>

				<!-- Category items -->
				<div class="category_items">
					<cms:module
						name="shop"
						action="show_item_list"
						category="$_REQUEST['area']"
						order_by="priority"
						order_asc="0"
						template="parts/category_items.xml"
						cms:eval="category"
						/>

					<cms:module
						name="articles"
						action="show"
						text_id="$_REQUEST['area']"
						template="stock/article_generic.xml"
						cms:eval="text_id"
						/>
				</div>

				<!-- Category page banners -->
				<div class="commercial">
					<cms:module
						name="links"
						action="show_link_list"
						group="$_REQUEST['area']"
						template="parts/commercial.xml"
						cms:eval="group"
						/>
				</div>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>

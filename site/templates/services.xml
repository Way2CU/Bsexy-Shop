<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['service']"
					template="parts/page_title.xml"
					cms:eval="text_id"
					/>
			</title>

			<!-- Page description -->
			<cms:module
				name="shop"
				action="show_category"
				text_id="$_REQUEST['service']"
				template="parts/page_description.xml"
				cms:eval="text_id"
				/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<!-- Top part of the site -->
			<cms:template file="parts/header.xml"/>

			<section>
				<!-- Category title -->
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['service']"
					template="parts/category_title.xml"
					cms:eval="text_id"
					>
					<param name="icon" value=""/>
				</cms:module>

				<!-- Category description -->
				<cms:module
					name="shop"
					action="show_category"
					text_id="$_REQUEST['service']"
					template="parts/category_description.xml"
					cms:eval="text_id"
					/>

				<!-- Show display controls options on mobile version -->
				<cms:mobile>
					<cms:template file="parts/display_controls.xml"/>
				</cms:mobile>

				<cms:module
					name="shop"
					action="show_category_list"
					parent="$_REQUEST['service']"
					template="parts/category_preview.xml"
					cms:eval="parent"
					>
					<param name="limit" value=""/>
				</cms:module>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>

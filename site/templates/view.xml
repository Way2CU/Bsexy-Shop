<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<cms:module
				name="shop"
				action="add_category_to_title"
				text_id="$_REQUEST['service']"
				cms:eval="text_id"
				/>
			<cms:module
				name="shop"
				action="add_category_to_title"
				text_id="$_REQUEST['area']"
				cms:eval="text_id"
				/>
			<cms:module
				name="shop"
				action="add_to_title"
				id="fix_id($_REQUEST['id'])"
				cms:eval="id"
				/>
			<cms:module name="head_tag" action="show"/>
			<cms:raw file="parts/gtmhead.txt"/>

			<!-- Canonical item link -->
			<link
				rel="canonical"
				href="URL::make(array('id' => fix_id($_REQUEST['id'])), 'view_item.xml')"
				cms:eval="href"
				/>
		</head>

		<body>
			<cms:raw file="parts/gtmbody.txt"/>

			<!-- Top part of the site -->
			<cms:template file="parts/header.xml"/>

			<section
				class="item_details"
				itemscope="itemscope"
				itemtype="https://schema.org/NewsArticle"
				>
				<cms:module
					name="shop"
					action="show_item"
					id="fix_id($_REQUEST['id'])"
					template="parts/item_details.xml"
					update_view_count="1"
					cms:eval="id"
					/>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>
